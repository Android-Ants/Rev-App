<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GalleryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_yellow</item>
        <item name="colorPrimaryVariant">@color/black_primary</item>
        <item name="colorOnPrimary">@color/grey_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_yellow</item>
        <item name="colorSecondaryVariant">@color/secondary_yellow</item>
        <item name="colorOnSecondary">@color/grey_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Nav" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryVariant">@color/grey_200</item>
        <item name="colorOnPrimary">@color/grey_200</item>

        <item name="colorPrimary">@color/secondary_yellow</item>
        <item name="android:textColorSecondary">@color/grey_200</item>
    </style>
</resources>